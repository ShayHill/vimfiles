
snippet atrue "assert_true or throw" b
if assert_true($1) | throw v:errors[-1] | endif
endsnippet

snippet aeq "assert_equal or throw" b
if assert_equal($1) | throw v:errors[-1] | endif
endsnippet

snippet amatch "assert_match or throw" b
if assert_match($1) | throw v:errors[-1] | endif
endsnippet

snippet local
vim9script

# run the main python file
nnoremap <leader>m :update<CR>:ScratchTermReplaceU venv/Scripts/python.exe src/$1/main.py<CR>

# resize the code window after running a python file
nnoremap <leader>w :resize 65<CR>
endsnippet
